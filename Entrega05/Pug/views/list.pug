doctype html
html(lang='es')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Mi plantilla de Ingreso de Datos en EJS
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
    body(style='\
    background: rgba(0, 0, 0, 0)\
    linear-gradient(270deg, rgb(132, 250, 176), rgb(143, 211, 244))\
    repeat scroll 0% 0% / 400% 400%;\
    ')
        .modal-dialog(role='document')
            .modal-content.rounded-5.shadow
                .modal-body.p-5.pt-0
                    h2(style='color:rgb(0, 0, 0);') Products
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            li.breadcrumb-item
                                a(href='/') Form
                            li.breadcrumb-item.active(aria-current='page') Products
                    if products.length > 0
                        .table-responsive
                        each product in products
                            table.table.table-dark
                                tbody
                                    tr(style='color: yellow;')
                                        th Title
                                        th Price
                                        th Thumbnail
                                    tr
                                        td= product.title
                                        td= product.price
                                        td
                                            img(src=product.thumbnail)
                    else
                        h3.alert.alert-danger We couldn't find any data.
