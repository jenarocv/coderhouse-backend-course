<h2 style="color:rgb(0, 0, 0);">Products</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Form</a></li>
        <li class="breadcrumb-item active" aria-current="page">Products</li>
    </ol>
</nav>

{{#greaterThan products.length 0}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Title</th>
            <th>Price</th>
            <th>Thumbnail</th>
        </tr>
        {{#each products}}
            <tr>
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.price}}
                </td>
                <td>
                    <img src="{{this.thumbnail}}" />

                </td>
            </tr>
        {{/each}}
    </table>
</div>
{{else}}
            <h3 class="alert alert-danger">We couldn't find any data.</h1>
{{/greaterThan}}